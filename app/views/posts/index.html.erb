<%#= @news_data["articles"] %>
<h2>News from API</h2>
<ul>
  <% @news_data["articles"].each do |article| %>
  <li>
    <h3><%= article["title"] %></h3>
    <p><%= article["description"] %></p>
    <p><img src = <%= article["urlToImage"] %> width="50%" height="50%"></p>
  </li>
  <% end  %>
</ul>

<h2>All posts by <%= current_user.name %></h2>
<ul>
  <% @all_posts.each do |post| %>

    <li>
      <h2><%= post.title %></h2>
      <%= post.content %></br>
      <small>created by <%= post.user.name %></small></br>
      <small> post id: <%= post.id %> </small>
    </li>

    <%#= link_to "view", post_path(post) %>
    <%#= link_to "edit", edit_post_path(post) %>
    <%#= link_to "delete", post_path(post), method: :delete %>
  <% end  %>
</ul>

<h2>Total Number of posts:
<%= @all_posts.count %></h2>
